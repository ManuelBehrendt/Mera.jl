{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "julia",
            "request": "launch",
            "name": "Run Mera.jl Tests",
            "program": "${workspaceFolder}/test/runtests.jl",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "JULIA_NUM_THREADS": "4"
            }
        },
        {
            "type": "julia",
            "request": "launch", 
            "name": "Run Tests with Coverage",
            "program": "${workspaceFolder}/scripts/run_coverage.jl",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "JULIA_NUM_THREADS": "4",
                "MERA_LOCAL_COVERAGE": "true"
            }
        },
        {
            "type": "julia",
            "request": "launch",
            "name": "Run Current Test File",
            "program": "${file}",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "JULIA_NUM_THREADS": "2"
            }
        },
        {
            "type": "julia",
            "request": "launch",
            "name": "Quick Test (No Heavy)",
            "program": "${workspaceFolder}/test/runtests.jl",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "JULIA_NUM_THREADS": "2",
                "MERA_SKIP_HEAVY": "true",
                "MERA_ZULIP_DRY_RUN": "true"
            }
        }
    ]
}
