{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "julia",
            "args": ["--project=test", "test/runtests.jl"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "env": {
                    "JULIA_NUM_THREADS": "4"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "julia",
            "args": ["--project=test", "--code-coverage=user", "test/runtests.jl"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "env": {
                    "JULIA_NUM_THREADS": "4",
                    "MERA_LOCAL_COVERAGE": "true"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Coverage Report",
            "type": "shell",
            "command": "julia",
            "args": ["--project=test", "scripts/generate_coverage.jl"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Run Tests with Coverage",
            "problemMatcher": []
        },
        {
            "label": "Quick Test (No Heavy)",
            "type": "shell",
            "command": "julia",
            "args": ["--project=test", "test/runtests.jl"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "env": {
                    "JULIA_NUM_THREADS": "2",
                    "MERA_SKIP_HEAVY": "true",
                    "MERA_ZULIP_DRY_RUN": "true"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Upload Coverage to Codecov",
            "type": "shell",
            "command": "julia",
            "args": ["--project=test", "scripts/upload_coverage.jl"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Generate Coverage Report",
            "problemMatcher": []
        }
    ]
}
